<% include ../include/head.ejs %>

	<div class="container">
		<h1><%= title %></h1>
    	<p>Welcome to <%= title %></p>	
		<div class="row movie-row">
			<a href="/admin/movie" class="btn btn-info pull-right">add new movie</a>
		</div>
		<div class="row">
			<% if(movies.length){ %>
				<% movies.forEach(function(item){ %>
					<div class="col-md-2">
						<div class="thumbnail">
							<a href="/movie/<%= item._id %>">
								<img src="<%= item.picurl %>" alt="<%= item.title %>">
							</a>
							<h3><a href="/movie/<%= item._id %>"><%= item.title %></a></h3>
							<p>
								<a href="/movie/<%= item._id %>" class="btn btn-primary" role="button">观看预告片</a>
							</p>
						</div>
					</div>
				<% }) %>
			<% } %>		
		</div>	

	</div>	

<% include ../include/foot.ejs %>